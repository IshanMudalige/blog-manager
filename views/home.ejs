<!DOCTYPE html>
<html>
  <head>
    <title>Blog Manager</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/a5a9dda98e.js" crossorigin="anonymous"></script>
  </head>
  <body>

    <!-- nav bar -->
    <nav class="navbar navbar-dark bg-dark justify-content-between" style="padding-top: 20px;">
      <div class='row'>
        <img src="<%= pic %>" width="50" height="50" class="d-inline-block align-top rounded-circle" alt="Avatar" style="margin-left: 20px;" onerror="this.onerror=null; this.src='profile.png'">
        <div class="column">
          <p class="text-lg font-weight-normal" style="color: white;font-size:small;">&nbsp&nbsp Welcome<br><span class="text-lg font-weight-bold" style="color: white;font-size:large;">&nbsp&nbsp <%= name %></span></p>
        </div>
      </div>
      <div class="row">
        <img src="blogger.png" width="40" height="40" class="d-inline-block align-top"  style="margin-right: 10px;">
        <p class="text-lg font-weight-bold" style="color: white;font-size: x-large;">Blog Manager</p>
      </div>
        <form action="/logout">
          <button type="submit" class="btn btn-outline-light"><i class="fa fa-sign-out" aria-hidden="true"></i> Logout</button>
        </form>
      </nav>

    <!-- body -->
    <div class="row">
      <!-- section 1 -->
      <div class="col" style="margin-left: 1%;margin-top: 3%;">
        <div class="text-light bg-dark" style="margin-left: 2%;margin-right:2%;"><h5>Publish New Blog Post</h5></div>
        <div class="container">
          <form action="/addNew" method="post">
            <div class="form-group">
              <label for="name">Title</label>
              <input type="text" id="title" name="title" class="form-control" placeholder="Enter Title" required>
            </div>
            <div class="form-group">
              <label for="content">Content</label>
              <textarea class="form-control" id="content" name="content" rows="10" placeholder="Enter Content" required></textarea>
            </div>
            <button type="submit" value="submit" class="btn btn-dark">Publish</button>
          </form>
        </div>
      </div>
      <!-- section 2 -->
      <div class="col" style="margin-right: 1%;margin-top: 3%;">
        <div class="text-light bg-dark" style="margin-left: 2%;margin-right:2%;padding-top:2px;"><h5>Manage Your Blog Posts</h5></div>
        <div class="well">
            
          <% if (success) { %>
          <div class="alert alert-success alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close"
              >Ã—</a
            >
            <strong>Success!</strong> Your post published.
          </div>
          <%}%>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Title</th>
                <th scope="col">Published</th>
                <th scope="col">Link</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <% Object.values(list).forEach(function(item){%>
              <tr>
                <td><%= item.title %></td>
                <td><%= item.published.split("T")[0] %></td>
                <td><a href="<%= item.url %>" target="_blank">View</a></td>
                <td>
                  <form action="/delete" method="post" >
                    <input type="text" name="id" hidden value="<%=item.id %>">
                    <button type="submit" value="submit" class="btn btn-warning"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                  </form>
                
                 </td>
              </tr>
              <%})%>
              
          </table>
            
        </div>
      </div>
    </div>

    </div>
  </body>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</html>



